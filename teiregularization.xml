<project name="teiregularization" default="dist" basedir=".">
    <description>
        Oxygen plugin for making regularization easier in TEI documents
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="."/>
  <property name="build" location="build_${ant.project.name}"/>
  <property name="dist"  location="bin"/>
  <property name="files" value="nz/ac/canterbury/ling/oxygen/Regularization*.java nz/ac/canterbury/ling/oxygen/InstallPlugin.java"/>
  <property name="mainclass" value="nz.ac.canterbury.ling.oxygen.InstallPlugin"/>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>
  
  <target name="compile" depends="init"
          description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}"
	   classpath="lib/oxygen.jar"
	   includes="${files}"
	   listfiles="yes"
	   includeantruntime="false"
	   debug="true"
	   >
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="dist" depends="compile"
          description="generate the distribution" >
    <mkdir dir="${dist}"/>
    <!-- Put everything in ${build} into the ${ant.project.name}.jar file -->
    <jar jarfile="${dist}/${ant.project.name}.jar" 
     basedir="${build}">
      <manifest>
	<attribute name="Main-Class" value="${mainclass}"/>
	<attribute name="Application-Name" value="${ant.project.name}"/>
	<attribute name="Permissions" value="all-permissions"/>
	<attribute name="Codebase" value="*"/>
      </manifest>
      <zipfileset dir="${src}/nz/ac/canterbury/ling/oxygen" includes="${ant.project.name}.xml" fullpath="plugin.xml"/>
    </jar>
    <delete dir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <delete file="${dist}/${ant.project.name}.jar"/>
  </target>
</project>
